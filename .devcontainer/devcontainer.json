// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/typescript-node
{
  "name": "Java Spring Boot & Angular",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "16"
    },
    "ghcr.io/devcontainers/features/java:1": {
      "version": "11",
      "installMaven": "true"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {},
    "ghcr.io/devcontainers/features/common-utils:2": {}
  },

  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [3306, 8080, 4200],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y mysql-server && sudo service mysql start && sudo mysql -e \"CREATE DATABASE IF NOT EXISTS test;\" && sudo mysql -e \"CREATE USER IF NOT EXISTS 'user'@'localhost' IDENTIFIED BY '123456';\" && sudo mysql -e \"GRANT ALL PRIVILEGES ON test.* TO 'user'@'localhost';\" && sudo mysql -e \"FLUSH PRIVILEGES;\" && sudo usermod -a -G mysql vscode && sudo chmod 755 /var/run/mysqld && sudo mysql -u user -p123456 test < /workspaces/projet-5/ressources/sql/script.sql",

  // Configure tool-specific properties.
  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack",
        "angular.ng-template",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  }

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  // "remoteUser": "root"
}
